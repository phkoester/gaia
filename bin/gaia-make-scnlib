#!/usr/bin/env bash
#
# gaia-make-scnlib
#
# Usage: gaia-make-scnlib
#

source "$GAIA_DIR/src/main/bash/gaia/init" || exit 2

clean_up() {
  rm -r $1 \
    CMakeCache.txt \
    CMakeFiles/ \
    Makefile \
    *.cmake \
    *.a \
    *.tcl
}

set -e

# Go to project

if [[ ! $GAIA_SCNLIB_DIR ]]; then
  shell-error -e2 Environment variable \`GAIA_SCNLIB_DIR\` not defined
fi
cd "$GAIA_SCNLIB_DIR"

# Set environment variables

if [[ $GAIA_CXX_GNU ]]; then
  export CXX=$GAIA_CXX_GNU
else
  export CXX=$(which g++)
fi
export CXXFLAGS="-fPIC -pthread"
export CC=$(dirname $CXX)/gcc
export CFLAGS="-fPIC -pthread"

# Loop through build types

for buildType in debug release; do
  echo "########################################"
  echo "#"
  echo "# Build type: $buildType"
  echo "#"
  echo "# CC      : $CC"
  echo "# CFLAGS  : $CFLAGS"
  echo "# CXX     : $CXX"
  echo "# CXXFLAGS: $CXXFLAGS"
  echo "#"
  echo "########################################"

  # Call CMake and Make

  clean_up -f
  set -x
  cmake -DCMAKE_BUILD_TYPE=${buildType^} .
  make clean
  make -j$(($(nproc) / 2))
  set +x

  # Copy files

  for file in *.a; do
    dest=$(basename $file)
    if [[ $buildType == debug ]]; then
      dest=${dest%.a}-g.a
    fi
    dest=$GAIA_INSTALL_LIB_DIR/$dest
    cp -v $file $dest
  done

  # Immediately clean up after each run

  clean_up
done

# EOF
